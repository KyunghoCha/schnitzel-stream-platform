# Active runtime environment examples (v2 graph runtime only)
# Load as needed: `set -a; source .env.example; set +a`

# Plugin loading policy (recommended)
ALLOWED_PLUGIN_PREFIXES=schnitzel_stream.
# Dev-only bypass (do not enable in production)
# ALLOW_ALL_PLUGINS=true

# Mock backend helper (`python -m schnitzel_stream.tools.mock_backend`)
MOCK_BACKEND_HOST=127.0.0.1
MOCK_BACKEND_PORT=18080

# RTSP smoke helper (`python3 scripts/check_rtsp.py`)
RTSP_TEST_URL=rtsp://127.0.0.1:8554/stream1

# Stream runtime env examples (normally set by `scripts/stream_fleet.py`)
SS_STREAM_ID=stream01
SS_INPUT_TYPE=rtsp
SS_INPUT_PLUGIN=schnitzel_stream.packs.vision.nodes:OpenCvRtspSource
SS_INPUT_URL=rtsp://127.0.0.1:8554/stream1
# SS_INPUT_PATH=data/samples/2048246-hd_1920_1080_24fps.mp4
# SS_INPUT_INDEX=0

# One-cycle compatibility keys (optional, mapped internally in stream_fleet)
# SS_CAMERA_ID=stream01
